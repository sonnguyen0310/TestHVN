<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.fragment.SplashScreenFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spn_brand_select"
        android:layout_centerInParent="true"
        android:text="Please select Brand"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spn_brand_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center" />


    <Button
        android:id="@+id/btn_select_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spn_brand_select"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Go" />
</RelativeLayout>
